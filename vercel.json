{
  "version": 2,
  "projects": {
    "frontend": {
      "rootDirectory": "frontend",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "framework": "vite"
    },
    "backend": {
      "rootDirectory": "backend",
      "buildCommand": "npm run build",
      "outputDirectory": "dist",
      "framework": null
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}
